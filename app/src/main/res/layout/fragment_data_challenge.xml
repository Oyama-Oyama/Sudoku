<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.roman.gurdan.sudo.pro.view.DataView
        android:id="@+id/total"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/lightMain"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp4"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/totalWin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:vTitle="@string/titleWeekly" />

    <com.roman.gurdan.sudo.pro.view.DataView
        android:id="@+id/totalWin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/lightMain"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp4"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@id/total"
        app:layout_constraintRight_toLeftOf="@id/totalFail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:vTitle="@string/title4x4" />

    <com.roman.gurdan.sudo.pro.view.DataView
        android:id="@+id/totalFail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/lightMain"
        app:cardCornerRadius="@dimen/dp8"
        app:cardElevation="@dimen/dp4"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@id/totalWin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:vTitle="@string/title6x6" />


</androidx.constraintlayout.widget.ConstraintLayout>